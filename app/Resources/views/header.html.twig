<div id="header">
    <div class="container">
        <div id="welcomeLine" class="row">
            {% if app.user is not null %}
                <div class="span6">Bine ati venit, <strong><a
                                href="{{ path('sonata_admin_dashboard') }}"> {{ app.user.username }} </a>
                    </strong>!
                </div>
            {% else %}
                <div class="span6"><strong><a
                                href="{{ path('fos_user_registration_register') }}">Inregistrare</a></strong></div>
            {% endif %}
        </div>
        <!-- Navbar ================================================== -->
        <div id="logoArea" class="navbar">
            <a id="smallScreen" data-target="#topMenu" data-toggle="collapse" class="btn btn-navbar">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </a>
            <div class="navbar-inner">
                <a class="brand" href="{{ path('static_pages_homepage') }}">
                    <img src="{{ asset('uploads/logo.png') }}" alt="Bootsshop"/>
                </a>
                <form class="form-inline navbar-search" method="post" action="products.html">
                    <input id="srchFld" class="srchTxt" type="text"/>
                    <select class="srchTxt">
                        <option>All</option>
                        <option>CLOTHES</option>
                        <option>FOOD AND BEVERAGES</option>
                        <option>HEALTH & BEAUTY</option>
                        <option>SPORTS & LEISURE</option>
                        <option>BOOKS & ENTERTAINMENTS</option>
                    </select>
                    <button type="submit" id="submitButton" class="btn btn-primary">Cauta</button>
                </form>
                <ul id="topMenu" class="nav pull-right">
                    <li class=""><a href="{{ path('book_bundle.show_books') }}">Carti</a></li>
                    <li class=""><a href="{{ path('book_bundle.author_list_page') }}">Autori</a></li>
                    <li class="">
                        {% if app.user is null %}
                            <a href="#login" role="button" data-toggle="modal" style="padding-right:0"><span
                                        class="btn btn-large btn-success">Login</span></a>
                        {% else %}
                            <a href="{{ path('fos_user_security_logout') }}" role="button" style="padding-right:0"><span
                                        class="btn btn-large btn-danger">Logout</span></a>
                        {% endif %}
                        <div id="login" class="modal hide fade in" tabindex="-1" role="dialog" aria-labelledby="login"
                             aria-hidden="false">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
                                <h3>Login</h3>
                            </div>
                            <div class="modal-body">
                                <form class="form-horizontal loginFrm" action="{{ path("fos_user_security_check") }}"
                                      method="post">
                                    <input type="hidden" name="_csrf_token"
                                           value="{{ fos_csrf_provider.generateCsrfToken('authenticate') }}"/>
                                    <div class="control-group">
                                        <input type="text" name="_username" id="inputEmail" placeholder="Email">
                                    </div>
                                    <div class="control-group">
                                        <input type="password" name="_password" id="inputPassword"
                                               placeholder="Password">
                                    </div>
                                    <div class="control-group">
                                        <label class="checkbox">
                                            <input type="checkbox" name="_remember_me" value="on">Tine-ma minte
                                        </label>
                                    </div>
                                    <button type="submit" type="submit" id="_submit" name="_submit"
                                            value="{{ 'security.login.submit'|trans }}" class="btn btn-success">Sign in
                                    </button>
                                    <a href="{{ path('fos_user_resetting_request') }}"><strong>Reseteaza parola</strong></a>
                                </form>
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- Header End====================================================================== -->
