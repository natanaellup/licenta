{% trans_default_domain 'FOSUserBundle' %}
{{ form_start(form, {'method': 'post', 'action': path('user_bundle.edit_profile'), 'attr': {'class': 'form-horizontal'}}) }}
{% if not form.vars.valid %}
    <div class="alert alert-block alert-error fade in">
        <button type="button" class="close" data-dismiss="alert">Ã—</button>
        {{ form_errors(form.email) }}
        {{ form_errors(form.username) }}
        {{ form_errors(form.birthday) }}
        {{ form_errors(form.avatar) }}
    </div>
{% endif %}
<div class="control-group">
    {{ form_label(form.email, null, {'label_attr': {'class': 'control-label'}}) }}
    <div class="controls">
        {{ form_widget (form.email, { attr : { class :"form-control" } }) }}
    </div>
</div>
<div class="control-group">
    {{ form_label(form.username, null, {'label_attr': {'class': 'control-label'}}) }}
    <div class="controls">
        {{ form_widget (form.username, { attr : { class :"form-control" } } ) }}
    </div>
</div>
<div class="control-group">
    {{ form_label(form.birthday, null, {'label_attr': {'class': 'control-label'}}) }}
    <div class="controls">
        {{ form_widget (form.birthday, { attr : { class :"form-control" } } ) }}
    </div>
</div>
<div class="control-group">
    {{ form_label(form.avatar, null, {'label_attr': {'class': 'control-label'}}) }}
    <div class="controls">
        {{ form_widget (form.avatar, { attr : { class :"form-control" } } ) }}
    </div>
</div>
<div class="control-group">
    <div class="controls">
        <input class="form-control btn btn-success" type="submit" id="_submit" name="_submit"
               value="{{ 'Salveaza profilul' }}"/>
    </div>
</div>
{{ form_end(form) }}