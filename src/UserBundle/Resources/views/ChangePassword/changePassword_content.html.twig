{% trans_default_domain 'FOSUserBundle' %}
{{ form_start(form, {'method': 'post', 'action': path('fos_user_change_password'), 'attr': {'class': 'form-horizontal'}}) }}
{% if not form.vars.valid %}
    <div class="alert alert-block alert-error fade in">
        <button type="button" class="close" data-dismiss="alert">Ã—</button>
        {{ form_errors(form.current_password) }}
        {{ form_errors(form.plainPassword.first) }}
        {{ form_errors(form.plainPassword.second) }}
    </div>
{% endif %}

<div class="control-group">
    {{ form_label(form.current_password, null, {'label_attr': {'class': 'control-label'}}) }}
    <div class="controls">
        {{ form_widget (form.current_password, { attr : { class :"form-control" } }) }}
    </div>
</div>

<div class="control-group">
    {{ form_label(form.plainPassword.first, null, {'label_attr': {'class': 'control-label'}}) }}
    <div class="controls">
        {{ form_widget (form.plainPassword.first, { attr : { class :"form-control" } } ) }}
    </div>
</div>
<div class="control-group">
    {{ form_label(form.plainPassword.second, null, {'label_attr': {'class': 'control-label'}}) }}
    <div class="controls">
        {{ form_widget (form.plainPassword.second, { attr : { class :"form-control" } } ) }}
    </div>
</div>
<div class="control-group">
    <div class="controls">
        <input class="form-control btn btn-success" type="submit" id="_submit" name="_submit"
               value="{{ 'Schimba parola' }}"/>
    </div>
</div>
{{ form_end(form) }}
