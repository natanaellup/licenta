{% trans_default_domain 'FOSUserBundle' %}
{{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'form-horizontal'}}) }}
<div class="control-group">
    {{ form_label(form.username, null, {'label_attr': {'class': 'control-label'}}) }}
    {{ form_errors(form.username, {'attr': {'class': 'alert alert-danger'}}) }}
    <div class="controls">
        {{ form_widget (form.username, { attr : { class :"form-control" } }) }}
    </div>
</div>
<div class="control-group">
    {{ form_label(form.email, null, {'label_attr': {'class': 'control-label'}}) }}
    {{ form_errors(form.email, {'attr': {'class': 'alert alert-danger'}}) }}
    <div class="controls">
        {{ form_widget (form.email, { attr : { class :"form-control" } }) }}
    </div>
</div>
<div class="control-group">
    {{ form_label(form.plainPassword.first, null, {'label_attr': {'class': 'control-label'}}) }}
    {{ form_errors(form.plainPassword.first, {'attr': {'class': 'alert alert-danger'}}) }}
    <div class="controls">
        {{ form_widget (form.plainPassword.first, { attr : { class :"form-control" } } ) }}
    </div>
</div>
<div class="control-group">
    {{ form_label(form.plainPassword.second, null, {'label_attr': {'class': 'control-label'}}) }}
    {{ form_errors(form.plainPassword.second, {'attr': {'class': 'alert alert-danger'}}) }}
    <div class="controls">
        {{ form_widget (form.plainPassword.second, { attr : { class :"form-control" } } ) }}
    </div>
</div>
<div class="control-group">
    <div class="controls">
        <input class="form-control btn btn-success" type="submit" id="_submit" name="_submit"
               value="{{ 'Inregistrare' }}"/>
    </div>
</div>
{{ form_end(form) }}